<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.perfildoctor">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="408dp"
        android:layout_height="362dp"
        app:srcCompat="@drawable/app_burn"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-4dp" />

    <TextView
        android:id="@+id/eps_perfil"
        android:layout_width="114dp"
        android:layout_height="24dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/robotomedium"
        android:text="EPS:"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/esp_perfil" />

    <TextView
        android:id="@+id/esp_perfil"
        android:layout_width="113dp"
        android:layout_height="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/robotomedium"
        android:text="Especialidad:"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/eps_perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreperfil" />

    <TextView
        android:id="@+id/nombreperfil"
        android:layout_width="91dp"
        android:layout_height="23dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/robotomedium"
        android:text="Nombre:"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/esp_perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/regresar_perfil"
        style="@android:style/Widget.Button.Small"
        android:layout_width="93dp"
        android:layout_height="42dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="60dp"
        android:background="#FF9800"
        android:fontFamily="@font/robotomedium"
        android:text="Regresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.444" />

</android.support.constraint.ConstraintLayout>