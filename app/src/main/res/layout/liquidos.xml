<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.liquidos">

    <TextView
        android:id="@+id/liquidos"
        android:layout_width="331dp"
        android:layout_height="82dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/candal"
        android:text="Cálculo de líquidos requeridos"
        android:textColor="#FF5722"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/area_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/area_value"
        android:layout_width="261dp"
        android:layout_height="41dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Area superficial quemada (%)"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/masa_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/liquidos" />

    <EditText
        android:id="@+id/masa_value"
        android:layout_width="259dp"
        android:layout_height="41dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Masa corporal (kg)"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/calcularvol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area_value" />

    <TextView
        android:id="@+id/volumen"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="20dp"
        android:text="Resultado (mL)"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/instrucciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcularvol" />

    <TextView
        android:id="@+id/instrucciones"
        android:layout_width="263dp"
        android:layout_height="113dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="88dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volumen" />

    <Button
        android:id="@+id/calcularvol"
        style="@android:style/Widget.Button.Small"
        android:layout_width="124dp"
        android:layout_height="37dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="20dp"
        android:background="#FF9800"
        android:fontFamily="@font/robotomedium"
        android:text="Calcular"
        app:layout_constraintBottom_toTopOf="@+id/volumen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/masa_value" />

</android.support.constraint.ConstraintLayout>